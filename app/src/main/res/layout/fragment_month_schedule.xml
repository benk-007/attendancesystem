<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- En-tÃªte du mois -->
    <androidx.cardview.widget.CardView
        style="@style/CardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="@color/primary_color"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mois"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_month_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 cours"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="@color/primary_color_light"
                    android:padding="4dp"
                    tools:text="45 cours" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_month_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mai 2025"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                tools:text="Mai 2025" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Navigation de mois -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_previous_month"
            style="@style/ButtonSecondary"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="â—€ PrÃ©cÃ©dent"
            android:textSize="12sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_current_month"
            style="@style/ButtonPrimary"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="Ce mois"
            android:textSize="12sp"
            android:layout_marginHorizontal="8dp" />

        <Button
            android:id="@+id/btn_next_month"
            style="@style/ButtonSecondary"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Suivant â–¶"
            android:textSize="12sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Statistiques rapides du mois -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="4dp">

        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_month_courses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="@color/primary_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MatiÃ¨res"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_month_weeks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/success_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semaines"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Liste des sessions du mois -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_month_schedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_schedule_session" />

    <!-- Ã‰tat vide -->
    <LinearLayout
        android:id="@+id/layout_empty_state_month"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_calendar"
            android:tint="@color/text_hint"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mois libre !"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_empty_message_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aucun cours programmÃ© ce mois"
            android:textColor="@color/text_hint"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Informations sur le mois vide -->
        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/warning_color"
            android:backgroundTintMode="multiply"
            android:alpha="0.1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… PÃ©riode de vacances ?"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/warning_color"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ VÃ©rifiez les autres mois\nâ€¢ Contactez l'administration si nÃ©cessaire\nâ€¢ Consultez les annonces importantes\nâ€¢ PrÃ©parez la rentrÃ©e"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>